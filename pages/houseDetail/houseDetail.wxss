/* pages/houseDetail/houseDetail.wxss */
.detailWrapper{
  background:#fff;
}
.detailCon{
  padding-bottom:120rpx;
}
.swiperItem{
  overflow: hidden;
}
.detailWrapper .banner .swiperItem .bannerImg{
   display:block;
   width:100%;
   height:472rpx;
}
.detailWrapper .banner .swiperItem  .curNum{
  position:absolute;
  bottom:22rpx;
  right:28rpx;
  font-size:20rpx;
  line-height:20rpx;
  color:#fff;
  padding:5rpx 10rpx;
  border-radius:4rpx;
  z-index:2;
}
.titleWrapper{
  margin:22rpx 0 50rpx 0;
  padding:0 30rpx;
}
.titleWrapper .title{
  font-size:28rpx;
  line-height:30rpx;
  color:#333;
  font-weight: bold;
}
.itemWrapper{
  padding:0 30rpx;
}
.itemWrapper .item{
  margin-bottom:44rpx;
}
.itemWrapper .item:last-child{
  margin-bottom:0;
}
._title{
  display:flex;
  position:relative;
  font-size:28rpx;
  color:#333;
  margin:22rpx 0;
  padding-left:14rpx;
}
._title .txt{
  display:block;
  flex:1;
}
._title .favirate{
  flex: 0 28rpx;
  width:28rpx;
}
._title .favirate image{
  width:30rpx;
  height:28rpx;
}
.itemWrapper .item  ._title::before{
  content:"";
  position:absolute;
  left:0;
  top:50%;
  margin-top:-14rpx;
  display:inline-block;
  width:6rpx;
  height:28rpx;
  border-radius:3rpx;
  background:#33C2A6;
}
.itemWrapper .item .con{
  overflow: hidden;
  font-size:26rpx;
  line-height:40rpx;
  color:#5C5C5C;
}
.itemWrapper .item .con .tagWrapper{
  margin:10rpx 66rpx 0 66rpx;
  display:flex;
  flex-direction: row;
  flex-wrap:wrap;
}
.itemWrapper .item .con .tag{
  display:inline-block;
  width:136rpx;
}
.address image{
  display:inline-block;
  margin-right:10rpx;
  width:20rpx;
  height:24rpx;
}
.address text{
  display:inline-block;
  font-size:24rpx;
  line-height:24rpx;
  color:#CCB67A;
}
.itemWrapper .item .con text{
  display:inline-block;
}
.itemWrapper .item .con image{
  display:block;
  width:100%;
  margin:30rpx 0;
}
.btnWrapper{
  position:fixed;
  left:0;
  right:0;
  bottom:0;
  width:100%;
  height:100rpx; 
  display:flex;
}
.btnWrapper .btnItem{
  border-top:2rpx solid #ECECEC;
  text-align:center; 
  border-left:0;
  border-right:0;
  line-height:100rpx;
  flex:1;
  background:#fff;
  font-size:0;
}
.btnWrapper .btnItem:first-child{
  background:#FF9600;
}
.btnWrapper .btnItem:last-child{
  background:#33C2A6
}

.btnWrapper .btnItem .txt{
  color:#fff;
  display:inline-block;
  vertical-align: top;
  text-align:center;
  font-size:34rpx;
  line-height:100rpx;
  position:relative;
}


.btnWrapper .btnItem::after{
  border:none;
}
.btnWrapper .btnItem .icon{
  display:block;
  margin:18rpx auto 10rpx auto;
  width:36rpx;
  height:36rpx;
}
.btnWrapper .btnItem .txt .txtItem{
  display:inline-block;
  vertical-align:middle;
  position:relative;
}
.btnWrapper .btnItem .txt .txtItem._txt,.btnWrapper .btnItem .txt .txtItem.msg{
  display:inline-block;
  text-align:center;
}
.btnWrapper .btnItem .txt .txtItem._txt{
  line-height:100rpx;
}
.btnWrapper .btnItem .txt .txtItem.msg{
  position:absolute;
  left:0;
  right:0;
  width:100%;
  font-size:18rpx;
  top:10rpx;
  color:#efefef;
} 
.msg_txt{
  text-align:center;
}
