.dialogWrapper .inputItem{
  border-radius:6rpx;
  background:#F5F5F5;
  border:2rpx solid #CCCCCC;
  margin-bottom:20rpx;
  padding:0 16rpx;
}
.dialogWrapper input,.dialogWrapper textarea{
  display:block;
  width:100%;
  color:#333;
  font-size:28rpx;
}
.dialogWrapper textarea{
  line-height:26rpx;
  padding:16rpx 0;
  height:216rpx;
}
.dialogWrapper input,.dialogWrapper .picker{
  height:74rpx;
  line-height:74rpx
}
.dialogWrapper .holder{
  color:#AEAEAE;
}
.imageWrapper{
  position:relative;
  overflow:hidden;
}
 .imgOverWrapper{
   position:absolute;
   left:0;
   right:0;
   top:0;
   bottom:0;
   width:100%;
   height:100%;
}
.imgOverWrapper .shadow{
  position:absolute;
  left:0;
  right:0;
  width:100%;
  height:112rpx;
  z-index:1
}
.imgOverWrapper .topShadow{
  top:0;
}
.imgOverWrapper .bottomShadow{
  bottom:0;
}
.imgOverWrapper .topTxt{
  z-index:2;
  position:absolute;
  left:0;
  right:0;
  width:100%;
  height:auto;
}
.imgOverWrapper .typeWrapper{
  display:inline-block;
  width:88rpx; 
  height:32rpx;
  border-radius:12rpx;
  background:#33C2A6;
  margin:24rpx 0 0 30rpx;
  font-size:0;
  text-align: center;
}
.imgOverWrapper .typeWrapper text{
  font-size:24rpx;
  color:#fff; 
  line-height:32rpx;
}
.imgOverWrapper .starWrapper{
  float:right;
  margin:28rpx 22rpx 0 0 ;
}
.imgOverWrapper .starWrapper .starTitle{
  margin:auto 0;
}

.dscWrapper {
  overflow: hidden;
  padding:0 30rpx;
  margin-bottom:50rpx;
}
.dscWrapper .item{
  margin-bottom:16rpx;
  font-size:0;
}
.dscWrapper ._title{ 
  font-size:28rpx;
  line-height:30rpx;
  color:#333;
}
.dscWrapper .tagWrapper .tagItem{
  display:inline-block;
  padding:8rpx 14rpx;
  font-size:20rpx;
  line-height:34rpx;
  border-radius:16rpx;
  background:#F5F5F5;
  color:#999;
}
.dscWrapper .tagWrapper .tagItem+ .tagItem{
  margin-left:14rpx;
}
.dscWrapper .addressWrapper image{
  display:inline-block;
  width:20rpx;
  height:22rpx;
  margin-right:10rpx;
}
.dscWrapper .addressWrapper text{
  display:inline-block;
  font-size:20rpx;
  line-height:20rpx;
  color:#CCB67A;
}
.dscWrapper .priceWrapper{
  font-size:0;
}
.dscWrapper .priceWrapper .priceItem{
  font-size:0;
  display:inline-block;
  margin-right:20rpx;
}
.dscWrapper .priceWrapper .priceItem label{
  display:inline-block;
  font-size:20rpx;
  line-height:22rpx;
  color:#666;
}
.dscWrapper .priceWrapper .priceItem .priceNumWrapper{
  display:inline-block;
}
.dscWrapper .priceWrapper .priceItem .priceNumWrapper .longPriceItem{
  display:inline-block;
}
.dscWrapper .priceWrapper .priceItem .priceNumWrapper .longPriceItem +.longPriceItem{
  margin-left:20rpx;
}
.dscWrapper .priceWrapper .priceItem .priceNumWrapper text{
  font-size:20rpx;
  color:#666;
}
.dscWrapper .priceWrapper .priceItem .priceNumWrapper text._type{
  font-size:18rpx;
}
.dscWrapper .priceWrapper .priceItem .priceNumWrapper text.priceNUm{
  font-size:26rpx;
  color:#FF9600;
}
