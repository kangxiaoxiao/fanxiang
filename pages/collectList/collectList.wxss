/* pages/collectList/collectList.wxss */
.collectListWrapper{
  border-top:2rpx solid #e5e5e5;
  background:#fff;
}
.collectListWrapper .item{
  padding:30rpx 0;
  margin:0 30rpx;
  display:flex;
  flex-direction: row;
  border-bottom:2rpx solid #e5e5e5;
}
.collectListWrapper .item .left{
  width:228rpx;
}
.collectListWrapper .item .left image{
  display:block;
  width:100%;
  height:172rpx;
}
.collectListWrapper .item .center{
  padding:0 30rpx;
  flex:1;
}
.collectListWrapper .item .center ._title{
  font-size:28rpx;
  color:#333;
  overflow : hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp:2;
  -webkit-box-orient: vertical;
}
.collectListWrapper .item .center .centerItem{
  padding-bottom:10rpx;
}
.collectListWrapper .item .center .priceItem{
  font-size:0;
}
.collectListWrapper .item .center .priceItem text{
  font-size:20rpx;
  color:#666;
} 
.collectListWrapper .item .center .priceItem text.unit{
  font-size:18rpx;
}
.collectListWrapper .item .center .priceItem text.priceNum{
  font-size:26rpx;
  color:#FF9600;
}
.collectListWrapper .item .center .addressWrapper{
  font-size:0;
}
.collectListWrapper .item .center .addressWrapper image{
  display:inline-block;
  width:20rpx;
  height:22rpx;
  margin-right:10rpx;
}
.collectListWrapper .item .center .addressWrapper text{
  font-size:20rpx;
  color:#CCB67A
}
.collectListWrapper .item  .right{
  flex:0 0 24rpx;
  width:24rpx;
  align-self:flex-end;
}
.collectListWrapper .item  .right image{
  display:block;
  width:24rpx;
  height:26rpx;
}
