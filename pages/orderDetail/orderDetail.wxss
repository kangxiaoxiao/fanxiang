/* pages/orderDetail/orderDetail.wxss */
.orderDetailWrapper{
  height:100%;
  background:#fff;
}
.orderDetailWrapper .main{
  padding-bottom:100rpx;
}
.orderDetailWrapper .main .mainMsg{
  display:flex;
  flex-direction: row;
  margin:0 30rpx;
  padding:32rpx 0;
  border-bottom:2rpx solid #e5e5e5;
}

.orderDetailWrapper .main .mainMsg .left{
  width:228rpx;
  flex:0 0 228rpx;
  margin-right:24rpx;
}
.orderDetailWrapper .main .mainMsg .left image{
  display:block;
  width:100%;
  height:172rpx;

}

.orderDetailWrapper .main .mainMsg .right{
  flex:1;
}
.orderDetailWrapper .main .mainMsg .right .item{
  font-size:24rpx;
  color:#666;
  line-height:22rpx;
}
.orderDetailWrapper .main .mainMsg .right .item._title{
  font-size:28rpx;
  line-height:28rpx;
  color:#333;
  margin-bottom:26rpx;
}
.orderDetailWrapper .main .mainMsg .right .item+.item{
  margin-top:20rpx;
}
.orderDetailWrapper  .orderPersonWrapper{
  margin:34rpx 30rpx 30rpx 30rpx;
}
.orderDetailWrapper  .orderPersonWrapper ._title{
  font-size:26rpx;
  color:#333;
  line-height:26rpx;
  margin-bottom:30rpx;
}
.orderDetailWrapper  .orderPersonWrapper .personMsgWrapper .item{
  margin-bottom:20rpx;
  font-size:24rpx;
  color:#666;
  line-height:24rpx;
}
.orderDetailWrapper .bottomBtnWrapper{
  position:fixed;
  left:0;
  bottom:0;
  right:0;
  width:100%;
  height:100rpx;
  line-height:100rpx;
  background:#33C2A6;
  
}
.orderDetailWrapper .bottomBtnWrapper text{
  display:block;
  text-align:center;
  color:#fff;
  font-size:34rpx;
}