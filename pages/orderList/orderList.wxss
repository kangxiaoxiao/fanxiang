/* pages/orderList/orderList.wxss */
.orderListWrapper .topBtnWrapper{
  display:flex;
  flex-direction: row;
  justify-content:space-between;
  background:#fff;
  padding:0 30rpx;
  margin-bottom:20rpx;
}
.orderListWrapper .topBtnWrapper .item{
  padding:14rpx 0 28rpx 0;
  border-bottom:6rpx solid transparent;
  font-size:28rpx;
  color:#333;
  line-height:26rpx;
}
.orderListWrapper .topBtnWrapper .item.active{
  border-color:#33C2A6;
}
.orderListWrapper .listWrapper .msg{
    margin-top:50%;
    text-align:center;
    font-size:24rpx;
    color:#666;
}
.orderListWrapper .listWrapper .listCon{
  background:#fff;
}
.orderListWrapper .listWrapper .listCon .item{
  display:flex;
  flex-direction: row;
  margin:0 30rpx;
  padding:32rpx 0;
  border-bottom:2rpx solid #e5e5e5;
}
.orderListWrapper .listWrapper .listCon .left{
  width:228rpx;
  flex:0 0 228rpx;
  margin-right:24rpx;
}
.orderListWrapper .listWrapper .listCon .left image{
  display:block;
  width:100%;
  height:172rpx;

}
.orderListWrapper .listWrapper .listCon .center{
  flex:1;
}
.orderListWrapper .listWrapper .listCon .center .centerItem{
  font-size:24rpx;
  color:#666;
  line-height:22rpx;
}
.orderListWrapper .listWrapper .listCon .center .centerItem._title{
  font-size:28rpx;
  line-height:28rpx;
  color:#333;
  margin-bottom:26rpx;
}
.orderListWrapper .listWrapper .listCon .center .centerItem+.centerItem{
  margin-top:20rpx;
}
.orderListWrapper .listWrapper .listCon .right{
  flex:0 0 90rpx;
  width:90rpx;
  text-align:right;
  align-self:flex-end;
  font-size:26rpx;
  line-height:26rpx;
}
.orderListWrapper .listWrapper .listCon .right.green{
  color:#33C2A6;
}
.orderListWrapper .listWrapper .listCon .right.yellow{
  color:#EEA915;
}
.orderListWrapper .listWrapper .listCon .right.grey{
  color:#ABABAB;
}